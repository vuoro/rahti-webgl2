{
  "linter": {
    "rules": {
      "style": {
        "useBlockStatements": "off",
        "noUnusedTemplateLiteral": "off",
        "noArguments": "off"
      },
      "performance": {
        "noDelete": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "noUndeclaredVariables": "error"
      },
      "complexity": {
        "useSimplifiedLogicExpression": "warn"
      }
    }
  },
  "formatter": {
    "lineWidth": 100,
    "indentStyle": "space"
  }
}